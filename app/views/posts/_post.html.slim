.card.mb-3.post id="post-#{post.id}"
  .card-header
    .d-flex.align-items-center
      = link_to user_path(post.user) do
        = image_tag post.user.avatar.url, size: '40x40', class: 'rounded-circle mr-1'
        = post.user.name
      - if current_user&.own?(post)
        .ml-auto
          = link_to post_path(post), class: 'delete-button', method: :delete , data: { confirm: '本当に削除しますか？' }
            = icon 'far', 'trash-alt', class: 'fa-lg'
          = link_to edit_post_path(post), class: 'edit-button' do
            = icon 'far', 'edit', class: 'fa-lg'
      - if current_user && !current_user.own?(post)
        .ml-auto
          = render 'likes/like_area', post: post
  = link_to post_path(post) do
    .swiper-container
      .swiper-wrapper
        - post.images.each do |image|
          .swiper-slide
            = image_tag image.url, class: 'card-img-top'
      .swiper-pagination
  .card-body
    = simple_format(post.content)